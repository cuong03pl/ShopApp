@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<New>
<link rel="stylesheet" href="~/css/custom-paging.css">

@{

    @using X.PagedList.Mvc

    ViewData["Title"] = "Category Index";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý tin tức</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Danh mục</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div style="display: flex; justify-content: space-between; margin-bottom: 12px;">
                    <h3 class="card-title">Danh sách tin tức</h3>
                    <div class="card-tools">
                        <a asp-action="Create" asp-area="Admin" asp-controller="News" class="btn btn-primary">Thêm mới
                            tin
                            tức</a>
                    </div>
                </div>
                @using (Html.BeginForm())
                {
                    <div class="input-group input-group-sm">
                        @Html.TextBox("SearchString")
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                }


            </div>


            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Detail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().CategoryID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().CreatedDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().ModifierDate)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                <img src="@Html.DisplayFor(modelItem => item.Image)" alt="Image"
                                    style=" max-width: 100px;height: 100px;" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Detail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ModifierDate)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>




        </div>

    </section>
    <!-- /.content -->
    <ul class="pagination pagination-sm">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </ul>

</div>
