            </dl>

            <a asp-action="Edit" asp-area="Admin" asp-route-id="@Model.Id" asp-controller="Category" class="btn btn-primary">Sửa</a> |
            <a asp-action="Index" asp-area="Admin" asp-controller="Category" class="btn btn-primary">Quay lại trang chủ</a>
            
        </div>

    </section>
    <!-- /.content -->
</div>





